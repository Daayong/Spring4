<?xml version="1.0" encoding="UTF-8"?>
	<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.iu.s4.notice.NoticeDAO">

	<select id="getList" resultType="com.iu.s4.notice.NoticeDTO" parameterType="com.iu.s4.util.Pager">
		SELECT * FROM
		(SELECT ROWNUM R, BK.* FROM
		(SELECT*
		FROM NOTICE
		ORDER BY NUM DESC)BK)
		WHERE R BETWEEN #{startRow} AND #{lastRow}
	</select>
	
	<select id="getSelect" parameterType="com.iu.s4.notice.NoticeDTO" resultType="com.iu.s4.notice.NoticeDTO">
		SELECT * FROM NOTICE WHERE NUM=#{num}
	</select>

	<insert id="setInsert" parameterType="com.iu.s4.notice.NoticeDTO">
		INSERT INTO NOTICE(NUM,TITLE,CONTENTS,WRITER,REGDATE,HITS)
		VALUES(NOTICE_SEQ.NEXTVAL,#{title},#{contents},#{writer},SYSDATE,0)
	</insert>

	<delete id="setDelete" parameterType="java.lang.Long">
		DELETE FROM NOTICE WHERE NUM=#{num}
	</delete>
	
	<update id="setUpdate" parameterType="com.iu.s4.notice.NoticeDTO">
		UPDATE NOTICE SET TITLE=#{title},CONTENTS=#{contents},WRITER=#{writer} 
		WHERE NUM=#{num}
	</update>
	
	

  </mapper>